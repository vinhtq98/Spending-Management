<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp"
        android:background="@drawable/bg_item_categories_inactive"
        android:padding="@dimen/_12sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvCategories"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:fontFamily="@font/google_sans_medium"
            android:text="Food"
            android:textColor="@color/color_neutral_1"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@id/imvCategories"
            app:layout_constraintStart_toEndOf="@id/imvCategories"
            app:layout_constraintTop_toTopOf="@id/imvCategories" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_medium"
            android:maxLines="1"
            android:text="30$"
            android:textColor="@color/color_neutral_1"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@id/imvCategories"
            app:layout_constraintEnd_toStartOf="@id/tvPercent"
            app:layout_constraintTop_toTopOf="@id/imvCategories" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:fontFamily="@font/google_sans_medium"
            android:text="Food"
            android:textColor="@color/color_neutral_3"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/imvCategories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvCategories" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>